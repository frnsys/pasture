virtualenv -p python2.7 /env/newsautomata_filters --no-site-packages
source /env/newsautomata_filters/bin/activate
pip install -r requirements.txt

cp config-sample.py config.py
sass app/static/css/index.sass app/static/css/index.css

cd app/static
bower install
cd ../..

sudo cp setup/filters.conf /etc/supervisor/conf.d/
sudo cp setup/filters.starbase.in.conf /etc/nginx/conf.d/
sudo service supervisor restart
sudo service nginx restart

echo "Copy over the appropriate data as well!"